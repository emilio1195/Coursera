<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tit1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_light"
            android:fontFamily="@font/sports"
            android:gravity="center"
            android:text="@string/Tittle1"
            android:textColor="@color/primary_text"
            android:textIsSelectable="false"
            android:textSize="@dimen/tamanoTitulo" />

        <LinearLayout
            android:id="@+id/Lytittle2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_light"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:fontFamily="@font/sports"
                android:text="@string/Letra1"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/tamanoTitulo" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:src="@drawable/huella1" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:src="@drawable/huella2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/sports"
                android:text="@string/Letra2"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/tamanoTitulo" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/Lyimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="125dp"
                android:background="@color/accent"
                android:fontFamily="@font/fontnew2"
                android:rotation="-65"
                android:text="Iniciar"
                android:textColor="@color/primary_text"
                android:textColorLink="@color/accent"
                android:textSize="30dp"
                android:theme="@style/BotonPress" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/foodpet1" />

            <LinearLayout
                android:id="@+id/lyDescr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/primary_dark"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/descp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="@string/Creado"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/tamanoDescripcion"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="@string/Pais"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/tamanoDescripcion"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:src="@drawable/iconopet"></ImageView>
        </FrameLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>